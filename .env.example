# --- OpenAI / API configuration ---
OPENAI_API_KEY=your_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# --- Model configuration ---
TEXT_EXTRACTION_MODEL=gpt-4.1-mini
TEXT_EXTRACTION_PARAMS={"temperature":0.0,"max_tokens":2000}

COVERAGE_MODEL=gpt-4.1
COVERAGE_PARAMS={"temperature":0.2,"max_tokens":4000}

# --- Paths ---
COURSES_BASE_DIR=./course
REPORTS_DIR=./reports

# --- Context / chunking configuration ---
# Roughly targeting up to ~100k tokens of source text.
CONTEXT_CHUNK_THRESHOLD=400000
CONTEXT_CHUNK_SIZE=150000
CONTEXT_CHUNK_OVERLAP=10000

# --- Prompt format convention ---
PROMPT_FORMAT=markdown
